<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/chatNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Name"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/chatSurnameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/chatNameTV"
        android:paddingLeft="5dp"
        android:text="Surname"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp" />


    <TextView
        android:id="@+id/chatDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Date"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatEmailFromTV"
        android:text="@string/from"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/chatNameTV"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatEmailTV"
        android:text="email"
        android:textSize="15dp"
        android:layout_below="@+id/chatNameTV"
        android:layout_toRightOf="@+id/chatEmailFromTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatEmailToTV"
        android:text="@string/to"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@+id/chatEmailTV"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatEmailRTV"
        android:text="email"
        android:textSize="15dp"
        android:layout_below="@+id/chatEmailTV"
        android:layout_toRightOf="@+id/chatEmailToTV" />

    <TextView
        android:id="@+id/chatMessageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatEmailRTV"
        android:text="message"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp" />

</RelativeLayout>